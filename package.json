{
  "version": "0.4.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "release:ci": "npm run release-it -- --ci",
    "release-it": "release-it --config release-it.json",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "analyze": "size-limit --why",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "homepage": "https://github.com/talkyjs/ssml",
  "repository": "https://github.com/talkyjs/ssml",
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "keywords": [
    "talkyjs",
    "alexa",
    "skill",
    "react"
  ],
  "name": "@talkyjs/ssml",
  "author": "Hidetaka Okamoto",
  "module": "dist/ssml.esm.js",
  "size-limit": [
    {
      "path": "dist/ssml.cjs.production.min.js",
      "limit": "1 MB"
    },
    {
      "path": "dist/ssml.esm.js",
      "limit": "1 MB"
    }
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "tsdx lint --fix"
    ]
  },
  "devDependencies": {
    "@ask-utils/test": "^3.11.0",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@size-limit/preset-small-lib": "^4.7.0",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "conventional-changelog-cli": "^2.1.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "release-it": "^14.2.2",
    "size-limit": "^4.7.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "ask-sdk": "^2.10.0"
  }
}
